<%- include('./components/header'); %>
<div class="container">
  <%- include('./components/navbar'); %>
  <div class="row justify-content-center">
    <div class="col">
      <br>
      <br>
      <br>
      <br>
      <br>
      <form method="POST" action="/changeSeat">
        <h1>你好
          <%= name %>
        </h1>
        <h2>当前选中座位：
          <br>
          <%= seat %>
        </h2>
        <div class="form-group">
          <label for="roomId">选择阅览室</label>
          <select class="form-control" id="roomId" name="roomId">
            <% rooms.forEach(({name:roomName,id}) => {%>
            <option value="<%= id %>">
              <%= roomName %>
            </option>
            <%});%>
          </select>
        </div>
        <div class="form-group">
          <label for="dev">座位号</label>
          <input type="text" class="form-control" id="dev" name="dev" placeholder="输入座位号">
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">保存</button>
      </form>
    </div>
  </div>
</div>
<%- include('./components/footer'); %>