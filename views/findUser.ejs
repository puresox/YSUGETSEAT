<%- include('./components/header'); %>
<div class="container">
  <%- include('./components/navbar'); %>
  <div class="row justify-content-center">
    <div class="col">
      <br>
      <br>
      <br>
      <br>
      <br>
      <!-- 通过阅览室找 -->
      <form method="POST" action="/findUserByRoom">
        <div class="form-group">
          <label for="roomId">选择阅览室</label>
          <select class="form-control" id="roomId" name="roomId">
            <% rooms.forEach(({name:roomName,id}) => {%>
            <option value="<%= id %>">
              <%= roomName %>
            </option>
            <%});%>
          </select>
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">查找</button>
      </form>
      <br>
      <!-- 通过姓名查找 -->
      <form method="POST" action="/findUserByName">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="输入姓名">
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">查找</button>
      </form>
    </div>
  </div>
</div>

<%- include('./components/footer'); %>